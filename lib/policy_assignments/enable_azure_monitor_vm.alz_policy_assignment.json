{
  "$schema": "https://schema.management.azure.com/schemas/2019-09-01/policyAssignment.json#",
  "name": "Enable-Azure-Monitor-VM",
  "type": "Microsoft.Authorization/policyAssignments",
  "apiVersion": "2021-06-01",
  "properties": {
    "displayName": "Enable Azure Monitor for Virtual Machines (initiative)",
    "description": "Deploys the Azure Monitor for VMs initiative to configure AMA/Insights and route data to the specified Log Analytics workspace.",
    "policyDefinitionId": "/providers/Microsoft.Authorization/policySetDefinitions/924bfe3a-762f-40e7-86dd-5c8b95eb09e6",
    "parameters": {
      "logAnalytics": {
        "value": "${log_analytics_workspace_id}"
      },
      "dcrResourceId": {
        "value": "${ama_vm_insights_data_collection_rule_id}"
      },
      "bringYourOwnUserAssignedManagedIdentity": {
        "value": false
      }
    },
    "enforcementMode": "Default"
  },
  "location": "${policy_assignment_location}",
  "identity": {
    "type": "SystemAssigned"
  }
}
