{
  "name": "Enforce-VM-Tag-and-Values",
  "type": "Microsoft.Authorization/policyDefinitions",
  "apiVersion": "2024-04-01",
  "properties": {
    "displayName": "Require tag and optionally values on virtual machines",
    "policyType": "Custom",
    "mode": "Indexed",
    "description": "Enforces a required tag and optionally its possible values on virtual machines. If an empty array is provided for tag values, only the presence of the tag is enforced.",
    "metadata": {
      "version": "1.0.0",
      "category": "Tags"
    },
    "parameters": {
      "tagName": {
        "type": "String",
        "metadata": {
          "displayName": "Tag Name",
          "description": "Name of the tag to enforce"
        }
      },
      "tagValues": {
        "type": "Array",
        "metadata": {
          "displayName": "Tag Value",
          "description": "Allowed values for the tag"
        },
        "defaultValue": []
      },
      "effect": {
        "type": "String",
        "allowedValues": ["Audit", "Deny", "Disabled"],
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "defaultValue": "Deny"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          { "field": "type", "equals": "Microsoft.Compute/virtualMachines" },
          {
            "anyOf": [
              {
                "field": "[concat('tags[', parameters('tagName'), ']')]",
                "exists": false
              },
              {
                "allOf": [
                  {
                    "value": "[length(parameters('tagValues'))]",
                    "greater": 0
                  },
                  {
                    "field": "[concat('tags[', parameters('tagName'), ']')]",
                    "notIn": "[parameters('tagValues')]"
                  }
                ]
              }
            ]
          }
        ]
      },
      "then": { "effect": "[parameters('effect')]" }
    }
  }
}
